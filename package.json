{
  "name": "@shubhamkv/expenses-cli",
  "description": "CLI tool to manage your expenses",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "if [ \"$(uname -s)\" = \"Darwin\" ] || [ \"$(uname -s)\" = \"Linux\" ]; then chmod +x dist/index.js; fi"
  },
  "bin": {
    "expenses": "dist/index.js"
  },
  "keywords": [
    "cli",
    "expenses",
    "nodejs"
  ],
  "author": "Shubham Vishwakarma",
  "license": "ISC",
  "dependencies": {
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "date-fns": "^4.1.0",
    "nanoid": "^3.3.8",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.2"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
